                                                                    <label class="checkbox-inline i-checks">
                                                                        {{ form_widget(form.emailShippingPayNotification, {'attr': {'style': 'position: absolute; opacity: 0;'}}) }}
                                                                    </label>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>4</td>
