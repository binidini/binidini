                                                                <td>
                                                                    <label class="checkbox-inline i-checks">
                                                                        {{ form_widget(form.smsShippingRefuseNotification, {'attr': {'style': 'position: absolute; opacity: 0;'}}) }}
                                                                    </label>
                                                                </td>
                                                                <td>
                                                                    <label class="checkbox-inline i-checks">
                                                                        {{ form_widget(form.emailShippingRefuseNotification, {'attr': {'style': 'position: absolute; opacity: 0;'}}) }}
                                                                    </label>
                                                                </td>
