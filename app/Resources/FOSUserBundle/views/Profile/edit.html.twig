{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/binidiniweb/css/plugins/iCheck/custom.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/binidiniweb/js/plugins/iCheck/icheck.min.js') }}"></script>


    <!-- iCheck -->
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });


        });
    </script>


    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#photo").attr("src",this.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#imgUpload").change(function () {
            readURL(this);
        });

        $('.profile-type input').on('ifChanged', function(event) {
            if (this.value == 1) {
                $('.company-field').addClass("hide");
                $('.user-field').removeClass("hide");
            } else  {
                $('.company-field').removeClass("hide");
                $('.user-field').addClass("hide");
            }
        });
        var passwordSubmitted = false;
        $('#password-reset').submit(function (e) {
            e.preventDefault();
            $('#myModal .text-error').html('');
            if (!passwordSubmitted) {
                passwordSubmitted = true;
                loader.show('#myModal .addLoader');
                $.post($(this).attr('action'), $(this).serialize()).done(
                        function (data) {
                            if (data.status) {
                                $('#myModal').modal('hide');
                                flashback.add('success', 'Пароль успешно изменен');
                            } else {
                                passwordSubmitted = false;
                                loader.hide('#myModal .addLoader');
                                $('#myModal .text-error').html(data.error)

                            }
                        }
                ).fail(function () {
                            passwordSubmitted = false;
                        })
            }
        });


    </script>

