{% extends "BinidiniWebBundle::layout.html.twig" %}

{% set user = app.user %}
{% set isItMe = true %}
{% set isItCompany = user.type == 2 %}

{% block pagetitle %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-5">
            <h2>Мои настройки</h2>
        </div>
    </div>
{% endblock %}

{% block content %}

    <div class="wrapper wrapper-content">
        <div class="row animated fadeInRight">
            <div class="col-md-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="row m-t-sm">
                            <div class="col-md-12">
                                <!-- just for show tabs correct -->
                            </div>
                        </div>
                        <div class="row m-t-sm">
                            <div class="col-md-12">
                                <div class="panel blank-panel">
                                    <div class="panel-heading">
                                        <div class="panel-options">
                                            <ul class="nav nav-tabs">
                                                <li class="active"><a href="#tab-1" data-toggle="tab">Профиль</a></li>
                                                <li><a href="#tab-2" data-toggle="tab">Оповещения</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab-1">
                                                <div class="row">
                                                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                                                    {{ form_errors(form) }}

                                                    <div class="col-md-3">
                                                        <a href="#" class="thumbnail" style="width: 208px;height: 208px">
                                                            <div id="thumbnail" class="preview"
                                                                 style="background-image: url('{{ user.imgPath | imagine_filter('photo200x200') }}')"></div>
                                                        </a>
                                                        <span class="btn btn-default btn-file">{{ user.imgPath? 'Изменить фотографию': 'Загрузить фотографию' }} {{ form_widget(form.imgPath,{'id':'imgUpload', 'data': user.imgPath}) }}</span>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <div class="form-group">
                                                            <label class="col-sm-3 control-label">
                                                                Тип аккаунта:
                                                            </label>

                                                            <div class="col-sm-5 profile-type">
                                                                {{ form_widget(form.type, {'attr':{'class':'radio radio-inline'}}) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group company-field {{ not isItCompany?'hide' }}">
                                                            <label class="col-sm-3 control-label">Название компании:</label>

                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_widget(form.companyName, {'attr': {'class': 'form-control', 'placeholder': 'Название компании'}, 'data':user.companyName}) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group no-margins company-field {{ not isItCompany?'hide' }}">
                                                            <div class="col-sm-3 control-label">

                                                            </div>
                                                            <div class="col-sm-5 no-padding">
                                                                <h4>Контактное лицо</h4>
                                                                <div class="hr-line-dashed" style="margin-top: 0"></div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-sm-3 control-label">Фамилия:</label>
                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Фамилия'}, 'data':user.lastname}) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-sm-3 control-label">Имя:</label>

                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Имя'}, 'data':user.firstname}) }}
                                                            </div>
                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_errors(form.firstName) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-sm-3 control-label">Отчество:</label>

                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_widget(form.patronymic, {'attr': {'class': 'form-control', 'placeholder': 'Отчество'}, 'data':user.patronymic}) }}
                                                            </div>
                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_errors(form.patronymic) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group company-field {{ not isItCompany?'hide' }}">

                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-sm-3 control-label">Email:</label>

                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}, 'data':user.email}) }}
                                                            </div>
                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_errors(form.email) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-sm-3 control-label">Адрес:</label>

                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Адрес'}, 'data':user.address}) }}
                                                            </div>
                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_errors(form.address) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-sm-3 control-label user-field {{ isItCompany?'hide' }}">О себе:</label>
                                                            <label class="col-sm-3 control-label {{ not isItCompany?'hide' }} company-field">О компании:</label>

                                                            <div class="col-sm-5 no-padding">

                                                                {{ form_widget(form.aboutMe, {'attr': {'class': 'form-control', 'placeholder': 'О себе'}, 'data':user.aboutme}) }}
                                                            </div>
                                                            <div class="col-sm-5 no-padding">
                                                                {{ form_errors(form.aboutMe) }}
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-sm-7 no-padding">
                                                                <button type="submit" class="pull-right btn btn-w-m btn-primary">Сохранить
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {{ form_rest(form) }}
                                                    {{ form_end(form) }}

                                                </div>
                                            </div>
                                            <div class="tab-pane" id="tab-2">
                                                <div class="row m-t-sm">
                                                    <div class="col-md-6">
                                                        <h4>Уведомления для перевозчика</h4>
                                                        <table class="table table-bordered">
                                                            <thead>
                                                            <tr>
                                                                <th>sms</th>
                                                                <th>Событие</th>
