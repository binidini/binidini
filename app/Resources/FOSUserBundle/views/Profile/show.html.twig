{% extends "BinidiniWebBundle::layout.html.twig" %}
{% set isItMe = user.id == app.user.id %}
{% set isItCompany = user.type == 2 %}
{% block pagetitle %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Профиль</h2>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="wrapper wrapper-content">
        <div class="row animated fadeInRight">
            <div class="col-md-4">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>О {{ isItCompany? 'компании': 'пользователе' }}</h5>
                    </div>
                    <div>
                        <div class="ibox-content no-padding border-left-right">
                            <img alt="image" class="img-responsive"
                                 src="{{ user.imgPath | imagine_filter('photo590x400') }}">
                        </div>
                        <div class="ibox-content profile-content">
                            <h4><strong>{{ isItCompany? user.name: user.Fio}}</strong></h4>
                            <p><i class="fa fa-map-marker"></i> {{ user.address }}</p>
                            {% if isItCompany %}
                                <h5>Контактное лицо</h5>
                                <h5><strong>{{ user.Fio }}</strong></h5>
                            {% endif %}
                            {% if user.email %}
                                <p><i class="fa fa-mail-reply"></i> <a
                                            href="mailto:{{ user.email }}">{{ user.email }}</a></p>
                            {% endif %}
                            <p><i class="fa fa-phone"></i><a href="tel:+7{{ user.username }} ">+7{{ user.username }}</a>
                            </p>
                            {% if user.aboutMe %}
                                <h5>О {{ isItCompany? 'компании': 'себе' }}</h5>
                                <p>{{ user.aboutMe | nl2br }}</p>
                            {% endif %}
                            {% if not isItCompany %}
                                <div class="row m-t-lg">
                                    <div class="col-md-12">
                                        <div class="widget style1 lazur-bg">
                                            <div class="row vertical-align">
                                                <div class="col-xs-3 text-left">
                                                    <h2>Рейтинг:</h2>
                                                </div>
                                                <div class="col-xs-9 text-right">
                                                    <h2 class="font-bold">7.7/10</h2>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="hr-line-dashed"></div>
                                        <div class="widget style1 navy-bg">
                                            <div class="row vertical-align">
                                                <div class="col-xs-9 text-left">
                                                    <h2>Перевозки:</h2>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <h2 class="font-bold">55</h2>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="widget style1 navy-bg">
                                            <div class="row vertical-align">
                                                <div class="col-xs-9 text-left">
                                                    <h2>Отправки:</h2>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <h2 class="font-bold">4</h2>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Отзывы</h5>
                    </div>
                    <div class="ibox-content">
                        <div>
                            <div class="feed-activity-list">
                                <div class="feed-element">
                                    <a href="#" class="pull-left">
                                        <img alt="image" class="img-circle"
                                             src="{{ asset('bundles/binidiniweb/img/logo202x202.png') }}">
                                    </a>

                                    <div class="media-body ">
                                        <small class="pull-right">2 часа назад</small>
                                        <strong>Мистер Смит</strong> оставил отзыв<br>
                                        <small class="text-muted">Сегодня в 12:10</small>
                                        <div class="well">
                                            Посылка была доставлена в срок
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}