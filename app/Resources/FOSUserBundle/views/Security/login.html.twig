{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <h3>Вход</h3>

    {% if error %}
        <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="m-t" role="form" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group input-group " style="color: #676a6c">
            <span class="input-group-addon">+7</span>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Номер телефона" required="required"  maxlength="10" pattern=".*\d{10}.*">
            <span class="input-group-addon">10 цифр</span>
        </div>
        <div class="form-group" style="color: #676a6c">
            <input type="password" id="password" name="_password" class="form-control" placeholder="Пароль" required="required" />
        </div>
        <div class="form-group">
            <table class="table">
                <tr>
                    <td class="text-left">
                        <a href="{{ path("fos_user_resetting_request") }}" class="">Забыли пароль?</a>
                    </td>
                    <td class="text-right">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me" style="font-weight: inherit">запомнить</label>
                    </td>
                </tr>
            </table>
        </div>

        <button type="submit" id="_submit" name="_submit" class="btn btn-primary block full-width m-b">Войти</button>
        <p class="text-center"><small>Еще не с нами?</small></p>
        <a class="btn btn-sm btn-success btn-block" href="{{ path("fos_user_registration_register") }}">Регистрация в Титимити</a>
    </form>

{% endblock fos_user_content %}
