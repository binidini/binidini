{% import 'BinidiniWebBundle:Frontend/Macros:page.html.twig' as page %}

{% extends 'BinidiniWebBundle::layout.html.twig' %}

{% block pageheader %}Поиск заказа{% endblock %}

{% block actions %}
    <a href="{{ path('binidini_core_shipping_new') }}" class="btn btn-primary btn-outline"><i class="fa fa-plus-square"></i> Новый заказ</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="ibox float-e-margins">

                    <div class="ibox-title">
                        {% if shipments.nbresults > 0 %}
                            Заказы {{ page.paging(shipments) }}

                            <div class="ibox-tools">

                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    по {{ shipments.maxperpage() }} записей
                                </a>
                                <ul class="dropdown-menu dropdown-user">
                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 10, 'state': app.request.get('state') } ) }}">по
                                            10 записей</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 25, 'state': app.request.get('state') } ) }}">по
                                            25 записей</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 50, 'state': app.request.get('state') } ) }}">по
                                            50 записей</a>
                                    </li>

                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 100, 'state': app.request.get('state') } ) }}">по
                                            100 записей</a>
                                    </li>
                                </ul>

                            </div>
                        {% else %}заказов нет{% endif %}
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-12 text-right">
                                {{ page.pagination(shipments) }}
                            </div>
                        </div>

                        {% if shipments.nbresults > 0 %}
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ sylius_resource_sort('id', 'Номер', 'desc') }}</th>
                                        <th>Что</th>
                                        <th>Откуда</th>
                                        <th>Куда</th>
                                        <th>{{ sylius_resource_sort('deliveryDatetime', 'Прибытие', 'desc') }}</th>
                                        <th class="text-right text-center" colspan="2">{{ sylius_resource_sort('deliveryPrice', 'Цена/Страховка', 'desc') }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for shipment in shipments %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('binidini_core_shipping_show', {'id': shipment.id}) }}">{{ shipment.id }}</a>
                                            </td>
                                            <td>{{ shipment.name[:24] }}</td>
                                            <td>{{ shipment.pickupAddress[:64] }}</td>
                                            <td>{{ shipment.deliveryAddress[:64] }}</td>
                                            <td>{{ shipment.deliveryDatetime | date('d.m H:i') }}</td>
                                            <td>
                                                <span class="{{ shipment.paymentGuarantee ? 'text-success' }} pull-right">
                                                    {{ shipment.deliveryPrice | price }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if shipment.insurance > 0 %}
                                                    {{ shipment.insurance | price }}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                </div>

                                <div class="col-sm-6 text-right">
                                    {{ page.pagination(shipments) }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

