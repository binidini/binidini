{% import 'BinidiniWebBundle:Frontend/Macros:page.html.twig' as page %}

{% extends 'BinidiniWebBundle::layout.html.twig' %}

{% block pageheader %}Поиск заказа{% endblock %}

{% block actions %}
    <a href="{{ path('binidini_core_shipping_new') }}" class="btn btn-primary">Новый заказ</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="ibox float-e-margins">

                    <div class="ibox-title">
                        {% if shipments.nbresults > 0 %}
                            {{ page.paging(shipments) }}

                            <div class="ibox-tools">

                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    по {{ shipments.maxperpage() }} записей
                                </a>
                                <ul class="dropdown-menu dropdown-user">
                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 15, 'state': app.request.get('state') } ) }}">по
                                            15 записей</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 30, 'state': app.request.get('state') } ) }}">по
                                            30 записей</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 60, 'state': app.request.get('state') } ) }}">по
                                            60 записей</a>
                                    </li>

                                    <li>
                                        <a href="{{ path('binidini_search_shipment_index', {'paginate': 90, 'state': app.request.get('state') } ) }}">по
                                            90 записей</a>
                                    </li>
                                </ul>

                            </div>
                        {% else %}заказов нет{% endif %}
                    </div>
                    <div class="ibox-content">

                        {% if shipments.nbresults > 0 %}

                            {{ include('BinidiniWebBundle::Frontend/Shipping/_shippings_list.html.twig', {'shippings': shipments}) }}

                            <div class="row">
                                <div class="col-sm-6">
                                </div>

                                <div class="col-sm-6 text-right">
                                    {{ page.pagination(shipments) }}
                                </div>
                            </div>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">

        $(document).ready(function() {

            $('.contact-box').each(function() {
                animationHover(this, 'pulse');
            });

        });

    </script>
{% endblock %}