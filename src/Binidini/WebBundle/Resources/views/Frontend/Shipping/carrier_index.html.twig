{% import 'BinidiniWebBundle:Frontend/Macros:page.html.twig' as page %}


{% extends 'BinidiniWebBundle::layout.html.twig' %}

{% block pageheader %}Мои перевозки{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="ibox float-e-margins">

                    <div class="ibox-title">
                        {% if shippings.nbresults > 0 %}
                            {{ page.paging(shippings) }}

                            <div class="ibox-tools">

                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    по {{ shippings.maxperpage() }} записей
                                </a>

                                {{ include('BinidiniWebBundle::Frontend/Shipping/inc/_paginate_filter.html.twig', {'path': 'binidini_core_carrier_index'}) }}
                            </div>
                        {% else %}
                            заказов нет
                        {% endif %}
                    </div>
                    <div class="ibox-content">

                            <div class="row">
                                <div class="col-sm-6 pagination">
                                    {{ include('BinidiniWebBundle::Frontend/Shipping/inc/_state_filter.html.twig', {'type': 'carrier'}) }}
                                </div>
                                <div class="col-sm-6 text-right">
                                    {{ page.pagination(shippings) }}
                                </div>
                            </div>

                        {% if shippings.nbresults > 0 %}

                            <div class="table-responsive">
                                {{ include('BinidiniWebBundle::Frontend/Shipping/inc/_shippings_table.html.twig', {'shippings': shippings}) }}
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                </div>

                                <div class="col-sm-6 text-right">
                                    {{ page.pagination(shippings) }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

