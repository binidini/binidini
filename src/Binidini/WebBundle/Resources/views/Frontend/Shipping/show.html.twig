{% extends 'BinidiniWebBundle::layout.html.twig' %}

{% block pagetitle %}
    <div class="row wrapper border-bottom white-bg page-heading" xmlns="http://www.w3.org/1999/html">
        <div class="col-sm-4">
            <h2>Детализация заказа</h2>

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="text-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="col-sm-8">
            <div class="title-action">

                {% if app.user.id == shipping.user.id and shipping.state in ['new', 'accepted', 'dispatched', 'on_way', 'delivered', 'paid']%}
                    <a href="#" class="btn btn-danger btn-outline">Отменить</a>
                {% endif %}
                {% if app.user.id == shipping.user.id and shipping.state == 'accepted'%} <a href="#" class="btn btn-primary">Выдан</a> {% endif %}
                {% if app.user.id == shipping.user.id and shipping.state == 'delivered'%} <a href="#" class="btn btn-primary">Оплачен</a> {% endif %}
                {% if app.user.id == shipping.user.id and shipping.state == 'rejected'%}
                    <a href="#" class="btn btn-danger">Потребовать гарантию</a>
                    <a href="#" class="btn btn-primary">Завершить</a>
                {% endif %}

                {% if app.user.id == shipping.user.id and shipping.state in ['accepted', 'delivered', 'dispatched', 'on_way', 'delivered', 'paid']%}
                    <a href="#" class="btn btn-danger btn-outline">Отказаться</a>
                {% endif %}
                {% if app.user.id == shipping.carrier.id and shipping.state == 'dispatched'%} <a href="#" class="btn btn-primary">Получен</a> {% endif %}
                {% if app.user.id == shipping.carrier.id and shipping.state == 'on_way'%} <a href="#" class="btn btn-primary">Доставлен</a> {% endif %}
                {% if app.user.id == shipping.carrier.id and shipping.state == 'paid'%} <a href="#" class="btn btn-primary">Оплачен</a> {% endif %}
                {% if app.user.id == shipping.carrier.id and shipping.state == 'refused'%}
                    <a href="#" class="btn btn-danger">Потребовать гарантию</a>
                    <a href="#" class="btn btn-primary">Завершить</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

