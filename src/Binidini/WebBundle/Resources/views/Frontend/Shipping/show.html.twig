{% extends 'BinidiniWebBundle::layout.html.twig' %}

{% block pagetitle %}
    <div class="row wrapper border-bottom white-bg page-heading" xmlns="http://www.w3.org/1999/html">
        <div class="col-sm-4">
            <h2>Детализация заказа</h2>

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="text-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="col-sm-8">
            <div class="title-action">

                {% if app.user.id == shipping.user.id and shipping.state in ['accepted', 'dispatched', 'on_way', 'delivered', 'paid']%}
                    <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'reject'}) }}" class="btn btn-danger btn-outline">Отменить</a>
                {% endif %}
                {% if app.user.id == shipping.user.id and shipping.state == 'new'%} <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'cancel'}) }}" class="btn btn-primary">Снять</a> {% endif %}
                {% if app.user.id == shipping.user.id and shipping.state == 'accepted'%} <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'dispatch'}) }}" class="btn btn-primary">Выдан</a> {% endif %}
                {% if app.user.id == shipping.user.id and shipping.state == 'delivered'%} <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'pay'}) }}" class="btn btn-primary">Оплачен</a> {% endif %}
                {% if app.user.id == shipping.user.id and shipping.state == 'rejected'%}
                    <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'dispute'}) }}" class="btn btn-danger">Потребовать гарантию</a>
                    <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'cancel'}) }}" class="btn btn-primary">Завершить</a>
                {% endif %}

                {% if shipping.carrier is not null %}
                    {% if app.user.id == shipping.carrier.id and shipping.state in ['accepted', 'delivered', 'dispatched', 'on_way', 'delivered', 'paid']%}
                        <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'refuse'}) }}" class="btn btn-danger btn-outline">Отказаться</a>
                    {% endif %}
                    {% if app.user.id == shipping.carrier.id and shipping.state == 'dispatched'%} <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'load'}) }}" class="btn btn-primary">Получен</a> {% endif %}
                    {% if app.user.id == shipping.carrier.id and shipping.state == 'on_way'%} <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'deliver'}) }}" class="btn btn-primary">Доставлен</a> {% endif %}
                    {% if app.user.id == shipping.carrier.id and shipping.state == 'paid'%} <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'complete'}) }}" class="btn btn-primary">Оплачен</a> {% endif %}
                    {% if app.user.id == shipping.carrier.id and shipping.state == 'refused'%}
                        <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'debate'}) }}" class="btn btn-danger">Потребовать гарантию</a>
                        <a href="{{ path('binidini_core_shipping_state_transition', {'id': shipping.id, 'transition': 'annul'}) }}" class="btn btn-primary">Завершить</a>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInUp">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="m-b-md">

                                    <h2>{{ shipping.name }}</h2>
                                </div>
                                <dl class="dl-horizontal">
                                    <dt>Оплата:</dt> <dd>{{ shipping.deliveryPrice | price }}</span></dd>
                                    <dt>Гарантия:</dt> <dd>{{ shipping.guaranteeCost | price }}</dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-7">
                                <dl class="dl-horizontal">

                                    <dt>Откуда:</dt> <dd>{{ shipping.pickupAddress }}</dd>
                                    <dt>Куда:</dt> <dd>{{ shipping.deliveryAddress }}</dd>
                                    <dt>Отправитель:</dt> <dd><a href="#">{{ shipping.user.name }}</a></dd>
                                    <dt>Перевозчик:</dt>
                                    <dd>
                                        <a href="#">
                                            {% if shipping.carrier is not empty %}
                                                {{ shipping.carrier.name }}
                                            {% endif %}
                                        </a>
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-lg-5" id="cluster_info">
                                <dl class="dl-horizontal" >

                                    <dt>Отправка:</dt> <dd>{{ shipping.pickupDatetime | date('d.m.y H:i') }} крайнее время</dd>
                                    <dt>Прибытие:</dt> <dd>{{ shipping.deliveryDatetime | date('d.m.y H:i') }} крайнее время</dd>
                                    <dt>Вес:</dt> <dd>{{ shipping.weight | default('~') | weight }}</dd>
                                    <dt>Габариты:</dt> <dd>{{ shipping.x | default(0)}}x{{ shipping.y | default(0)}}x{{ shipping.z | default(0) }} см</dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <dl class="dl-horizontal">
                                    <dt>Дополнительно:</dt> <dd>{{ shipping.description |nl2br }}</span></dd>
                                </dl>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <dl class="dl-horizontal">
                                    <dt>Статус:</dt>
                                    <dd>
                                        <div class="progress progress-striped active">
                                            <div style="width: 14%" class="progress-bar {{ (shipping.state == 'new') ? 'progress-bar-success' : '' }}">
                                                <span>новый</span>
                                            </div>
                                            <div style="width: 14%" class="progress-bar {{ (shipping.state == 'accepted') ? 'progress-bar-success' : '' }}">
                                                <span>принят</span>
                                            </div>
                                            <div style="width: 14%" class="progress-bar {{ (shipping.state == 'dispatched') ? 'progress-bar-success' : '' }}">
                                                <span>выдан</span>
                                            </div>
                                            <div style="width: 14%" class="progress-bar {{ (shipping.state == 'on_way') ? 'progress-bar-success' : '' }}">
                                                <span>в пути</span>
                                            </div>
                                            <div style="width: 14%" class="progress-bar {{ (shipping.state == 'delivered') ? 'progress-bar-success' : '' }}">
                                                <span>доставлен</span>
                                            </div>
                                            <div style="width: 14%" class="progress-bar {{ (shipping.state == 'paid') ? 'progress-bar-success' : '' }}">
                                                <span>оплачен</span>
                                            </div>
                                            <div style="width: 16%" class="progress-bar {{ (shipping.state == 'completed') ? 'progress-bar-success' : '' }}">
                                                <span>завершен</span>
                                            </div>
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row m-t-sm">
                            <div class="col-lg-12">
                                <div class="panel blank-panel">
                                    <div class="panel-heading">
                                        <div class="panel-options">
                                            {% set messageTabIsActive = not shipping.isNew() or app.request.get('tab') == 'message' %}
                                            <ul class="nav nav-tabs">
                                                <li class="{{ messageTabIsActive ? 'active' : '' }}"><a href="#tab-1" data-toggle="tab">Сообщения</a></li>
                                                <li class="{{ not messageTabIsActive ? 'active' : '' }}"><a href="#tab-3" data-toggle="tab">Заявки</a></li>
                                                <li class=""><a href="#tab-2" data-toggle="tab">История</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="tab-content">
                                            <div class="tab-pane {{ messageTabIsActive ? ' active': '' }}" id="tab-1">
                                                {{ form_start(message_form, {'action': path('binidini_core_shipping_message_new', {'shipping_id': shipping.id}), 'attr': {'class': 'form-horizontal'} }) }}
                                                {{ form_errors(message_form) }}
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        {{ form_widget(message_form.text, {'attr': {'class': 'form-control', 'placeholder': 'Написать сообщение'}}) }}
                                                        {{ form_widget(message_form.shipping, {'attr': {'value': shipping.id}}) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-3">
                                                        <button class="btn btn-primary" type="submit">
                                                            Отправить
                                                        </button>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        {{ form_errors(message_form.text) }}
                                                    </div>
                                                </div>
                                                {{ form_rest(message_form) }}
                                                {{ form_end(message_form) }}
                                                <div class="hr-line-dashed"></div>
                                                {% render path('binidini_core_shipping_message_index', {'shipping_id':shipping.id}) %}
                                            </div>
                                            <div class="tab-pane" id="tab-2">

                                            </div>
                                            <div class="tab-pane {{ not messageTabIsActive ? ' active' : '' }}" id="tab-3">
                                                {% if not messageTabIsActive and shipping.user.id != app.user.id %}
                                                {{ form_start(bid_form, {'action': path('binidini_core_bid_new', {'shipping_id': shipping.id}), 'attr': {'class': 'form-horizontal'} }) }}
                                                {{ form_errors(bid_form) }}
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        {{ form_widget(bid_form.comment, {'attr': {'class': 'form-control', 'placeholder': 'Вы можете написать необходимые пояснения к заявке.'}}) }}
                                                        {{ form_widget(bid_form.shipping, {'attr': {'value': shipping.id}}) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-3">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-rub"></i></span>
                                                            {{ form_widget(bid_form.price, {'attr': {'class': 'form-control', 'value':shipping.deliveryPrice}}) }}
                                                            <span class="input-group-btn"><button class="btn btn-primary" type="submit">Подать заявку</button></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        {{ form_errors(bid_form.comment) }}
                                                        {{ form_errors(bid_form.price) }}
                                                        <span class="help-block m-b-none">Укажите Вашу стоимость доставки заказа в рублях.</span>
                                                    </div>
                                                </div>


                                                {{ form_rest(bid_form) }}
                                                {{ form_end(bid_form) }}

                                                <div class="hr-line-dashed"></div>
                                                {% endif %}
                                                {% render path('binidini_core_bid_index', {'shipping_id':shipping.id}) %}

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

