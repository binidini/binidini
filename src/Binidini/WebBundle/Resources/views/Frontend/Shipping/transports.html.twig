{% import 'BinidiniWebBundle:Frontend/Macros:page.html.twig' as page %}


{% extends 'BinidiniWebBundle::layout.html.twig' %}

{% block pagetitle %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-12">
            <h2>Мои перевозки</h2>

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="text-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="ibox float-e-margins">

                    <div class="ibox-title">
                        {% if shippings.nbresults > 0 %}
                            Заказы {{ page.paging(shippings) }}

                            <div class="ibox-tools">

                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    по {{ shippings.maxperpage() }} записей
                                </a>
                                <ul class="dropdown-menu dropdown-user">
                                    <li>
                                        <a href="{{ path('binidini_core_shipping_index', {'paginate': 10, 'state': app.request.get('state') } ) }}">по
                                            10 записей</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('binidini_core_shipping_index', {'paginate': 25, 'state': app.request.get('state') } ) }}">по
                                            25 записей</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('binidini_core_shipping_index', {'paginate': 50, 'state': app.request.get('state') } ) }}">по
                                            50 записей</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('binidini_core_shipping_index', {'paginate': 100, 'state': app.request.get('state') } ) }}">по
                                            100 записей</a>
                                    </li>
                                </ul>

                            </div>
                        {% else %}
                            заказов нет
                        {% endif %}
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-6 pagination">
                                &nbsp;&nbsp;&nbsp;
                                <div class="btn-group">
                                    <button data-toggle="dropdown"
                                            class="btn btn-primary btn-outline dropdown-toggle">{{ (app.request.get('state') ~ ' orders') | trans }}
                                        <span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': ''}) }}">Все
                                                заказы</a></li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': 'accepted' }) }}">Принятые
                                                заказы</a></li>
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': 'delivered' }) }}">Доставленные
                                                заказы</a></li>
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': 'paid' }) }}">Оплаченные
                                                заказы</a></li>
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': 'completed' }) }}">Завершенные
                                                заказы</a></li>
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': 'rejected' }) }}">Отказы</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': 'canceled' }) }}">Отмененные
                                                заказы</a></li>
                                        <li>
                                            <a href="{{ path('binidini_core_shipping_index', {'paginate': app.request.get('paginate'), 'state': 'conflict' }) }}">Спорные
                                                заказы</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-sm-6 text-right">
                                {{ page.pagination(shippings) }}
                            </div>
                        </div>

                        {% if shippings.nbresults > 0 %}
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ sylius_resource_sort('id', 'Номер', 'desc') }}</th>
                                        <th>Что</th>
                                        <th>Откуда</th>
                                        <th>Куда</th>
                                        <th>{{ sylius_resource_sort('pickupDatetime', 'Отправка', 'desc') }}</th>
                                        <th>{{ sylius_resource_sort('deliveryDatetime', 'Доставка', 'desc') }}</th>
                                        <th>Статус</th>
                                        <th class="text-right">Цена</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for shipping in shippings %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('binidini_core_shipping_show', {'id': shipping.id}) }}">{{ shipping.id }}</a>
                                            </td>
                                            <td>{{ shipping.name[:24] }}</td>
                                            <td> <span >{{ shipping.pickupAddress[:64] }}</span></td>
                                            <td>{{ shipping.deliveryAddress[:64] }}</td>
                                            <td>{{ shipping.pickupDatetime | date('d.m H:i') }}</td>
                                            <td>{{ shipping.deliveryDatetime | date('d.m H:i') }}</td>
                                            <td>
                                                <span class="text-{{ shipping.state }}">{{ shipping.state | trans }}</span>
                                            </td>
                                            <td class="text-right">{{ shipping.deliveryPrice | price }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                </div>

                                <div class="col-sm-6 text-right">
                                    {{ page.pagination(shippings) }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

